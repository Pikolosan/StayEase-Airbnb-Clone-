<% layout('./layouts/boilerplate') -%>
<body>
  <br><br>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">        
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter a catchy title" type="text" class="form-control" required />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Field cannot be empty!
          </div>
        </div>
        
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control" required></textarea>
          <div class="invalid-feedback">
            Field cannot be empty!
          </div>
        </div>
        
        <div class="mb-3">
          <label for="imageURL" class="form-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control" 
            required
          /> 
          <div class="invalid-feedback">
            Field cannot be empty!
          </div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1,000" type="number" class="form-control" required/>
            <div class="invalid-feedback">
              Field cannot be empty!
            </div>
          </div>
          
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
            <div class="invalid-feedback">
              Field cannot be empty!
            </div>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="enter location"
            type="text"
            class="form-control"
            required  
          />
          <div class="invalid-feedback">
            Field cannot be empty!
          </div>
        </div>

        <!-- Categories Input -->
        <div class="mb-3">
          <label for="categories" class="form-label">Categories</label><br>
          <input type="checkbox" name="listing[categories][]" value="Room"> Room<br>
          <input type="checkbox" name="listing[categories][]" value="Iconic-City"> Iconic City<br>
          <input type="checkbox" name="listing[categories][]" value="Amazing-Pools"> Amazing Pools<br>
          <input type="checkbox" name="listing[categories][]" value="Mountains"> Mountains<br>
          <input type="checkbox" name="listing[categories][]" value="Cruise"> Cruise<br>
          <input type="checkbox" name="listing[categories][]" value="Camping"> Camping<br>
          <input type="checkbox" name="listing[categories][]" value="Arctic"> Arctic<br>

        </div>

        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
      </form>
    </div>
  </div>
</body> 
