<% layout('./layouts/boilerplate') -%>
<body>
  <style>
    #filters .filter {
      color: inherit; /* Use the inherited color from the parent element */
      text-decoration: none; /* Remove the underline */
    }

    #filters .filter:hover {
      color: inherit; /* Ensure the color stays the same on hover */
    }
    #filters {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    .filter {
      text-align: center;
      margin-right: 2rem;
      opacity: 0.7;
    }
    .filter p {
      font-size: 0.8rem;
    }
    ion-icon {
      --ionicon-stroke-width: 30px;
      font-size: 22px;
      margin-bottom: -5px;
    }
    .filter:hover {
      opacity: 1;
      border-bottom: 2px solid rgba(0, 0, 0, 0.2);
      cursor: pointer;
    }
  </style>
  <!-- <br> -->
  <div class="mt-3 mb-3">
    <!-- <h3>All Listings</h3> -->
    <div id="filters">
      <a href="/listings?categories=All" class="filter">
        <div>
          <ion-icon name="apps-outline"></ion-icon>
        </div>
        <p>All</p>
      </a>
      <a href="/listings?categories=Room" class="filter">
        <div>
          <ion-icon name="bed-outline"></ion-icon>
        </div>
        <p>Room</p>
      </a>
      <a href="/listings?categories=Iconic-City" class="filter">
        <div>
          <i class="fa-solid fa-city"></i>
        </div>
        <p>Iconic City</p>
      </a>
      <a href="/listings?categories=Amazing-Pools" class="filter">
        <div>
          <i class="fa-solid fa-water-ladder"></i>
        </div>
        <p>Amazing Pools</p>
      </a>
      <a href="/listings?categories=Mountains" class="filter">
        <div>
          <i class="fa-solid fa-mountain"></i>
        </div>
        <p>Mountains</p>
      </a>
      <a href="/listings?categories=Cruise" class="filter">
        <div>
          <i class="fa-solid fa-ship"></i>
        </div>
        <p>Cruise</p>
      </a>
      <a href="/listings?categories=Camping" class="filter">
        <div>
          <i class="fa-solid fa-campground"></i>
        </div>
        <p>Camping</p>
      </a>
      <a href="/listings?categories=Arctic" class="filter">
        <div>
          <ion-icon name="snow-outline"></ion-icon>
        </div>
        <p>Arctic</p>
      </a>
    </div>

    <div class="row">
      <% if (allListings.length === 0) { %>
      <div class="col-12 text-center No-Msg">
        <h3>No Listings Found</h3>
        <p>It looks like there are no listings available for this category right now.</p>
        <p><a href="/listings/new" class="btn btn-dark">Create a New Listing</a></p>
        <p>Or browse other categories using the filters above.</p>
      </div>
      <% } else { %>
      <div class="cardHolder row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xsm-1">
        <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-links">
          <div class="card listing-card">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="Listing's Image"
              style="height: 15rem"
            />
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b>
                <span>&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</span>
              </p>
              <!-- <hr> -->
            </div>
          </div>
        </a>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</body>